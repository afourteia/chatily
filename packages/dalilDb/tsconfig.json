{
  "extends": "../../tsconfig.base.json",
  "include": ["index.ts", "./generated/**/*.ts", "meta.ts"],
  "exclude": ["node_modules", "dist", "types"],
  "compilerOptions": {
    "types": ["node"],
    "lib": ["es2022"],
    "outDir": "dist",
    "declarationDir": "types",
    /* Path mapping */
    "baseUrl": ".",
    "paths": {
      // "@/*": ["/*"]
      "@prisma/generated": ["prisma/generated/"]
    }
  },
  "tsc-alias": {
    "verbose": false,
    "resolveFullPaths": true,
    "baseUrl": "./",
    "paths": {
      "@prisma/generated": ["prisma/generated"]
    }
  }
}
