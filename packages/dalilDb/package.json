{
  "name": "@project-name/dalil-db",
  "version": "0.0.1",
  "private": true,
  "type": "module",
  "main": "index.ts",
  "types": "types/index.d.ts",
  "scripts": {
    "db-inspect": "prisma db pull --schema ./prisma/schema.prisma",
    "db-generate": "rimraf prisma/generated && prisma generate --schema ./prisma/schema.prisma && pnpm run generate-index && pnpm run prettier",
    "generate-index": "pnpx tsx scripts/generate-index.ts",
    "prettier": "prettier . --write --log-level warn",
    "build": "rimraf tsconfig.tsbuildinfo dist types && pnpm db-generate && tsc && tsc-alias && tsx scripts/fix-build-import-path.ts"
  },
  "prisma": {
    "seed": "pnpx tsx prisma/seed.ts"
  },
  "author": "Abdul Fourteia",
  "license": "TBD",
  "description": "prisma schema for main dalilshafi database",
  "dependencies": {
    "@prisma/client": "^6.8.1",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@faker-js/faker": "^8.4.1",
    "@types/node": "^22.15.33",
    "chalk": "^5.3.0",
    "decimal.js": "^10.5.0",
    "dotenv": "^16.4.7",
    "eslint-config-prettier": "^9.1.0",
    "prettier": "^3.3.3",
    "prisma": "^6.8.1",
    "prisma-dbml-generator": "^0.12.0",
    "prisma-erd-generator": "^1.11.2",
    "prisma-generator-fake-data": "^0.14.2",
    "prisma-zod-generator": "^0.8.13",
    "rimraf": "^6.0.1",
    "tsc-alias": "^1.8.10",
    "tsconfig-paths": "^4.2.0",
    "tsx": "^4.17.0"
  }
}
